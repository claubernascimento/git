package algorithms;
import java.util.Scanner;
public class CuttingRod {
public int Memo(int[] p, int n){
int r[]=new int[n+1];
for(int i=0;i<n;i++){
r[i]=0;
}
return memoi(p,n,r);
}
public int memoi(int[] p, int n, int[] r){
if(r[n]>0){
return r[n];
}
int q;
if(n==0) q=0;
else{
q=0;
for(int i=0;i<n;i++){
q=Math.max(q, p[i]+memoi(p,n-i-1,r));
}
}
r[n]=q;
return q;
}
public static void main(String[] args) {
Scanner sc=new Scanner(System.in);
System.out.println(“Inserir Tamanho da Haste:”);
CuttingRod cr=new CuttingRod();
int n=sc.nextInt();
System.out.println(“Inserir Preço de Cada pedaço:”);
int p[]=new int[n];
for(int i=0;i<n;i++){
p[i]=sc.nextInt();
}
int r=cr.Memo(p, n);
System.out.println(“Valor Vendido: “+r);
}
}
